<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/OneLineSearchListLayout">

    <ImageView
        android:id="@+id/iv_listImg"
        android:layout_width="86dp"
        android:layout_height="92dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_listName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_listName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_listImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_listVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/iv_listImg"
        app:layout_constraintTop_toBottomOf="@+id/tv_listName" />

    <TextView
        android:id="@+id/tv_listDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/iv_listImg"
        app:layout_constraintTop_toBottomOf="@+id/tv_listVenue" />


<!--    app:layout_constraintStart_toEndOf="@+id/tv_listName"-->
<!--    android:layout_marginStart="52dp"-->

    <ImageView
        android:id="@+id/iv_favImg"
        android:layout_width="51dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/heart_outline_black"/>


</androidx.constraintlayout.widget.ConstraintLayout>

